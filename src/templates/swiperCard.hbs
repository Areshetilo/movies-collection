{{#each this}}
    <div class="swiper-slide">
      {{#if backdrop_path}}
        <img class="movie-card__image" src="" data-source="https://image.tmdb.org/t/p/w768{{backdrop_path}}"
             data-id="{{id}}" alt="{{title}}"
             data-lazy="https://image.tmdb.org/t/p/w500{{backdrop_path}}"/>
      {{else}}
        <img class="movie-card__image" src="" data-source="https://i114.fastpic.ru/big/2020/1029/1d/f806bccd6cf981cfdeb2b7c18629ad1d.jpg"
             data-id="{{id}}" alt="{{title}}"
             data-lazy="https://i114.fastpic.ru/big/2020/1029/1d/f806bccd6cf981cfdeb2b7c18629ad1d.jpg"/>
      {{/if}}
      <span class="movie-card__title">{{title}}</span>
      <span class="movie-card__vote">{{vote_average}}</span>
    </div>
{{/each}}
